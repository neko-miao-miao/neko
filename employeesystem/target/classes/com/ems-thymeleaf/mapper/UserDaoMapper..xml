<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.emsthymeleaf.dao.UserDao">
    <select id="findByName" parameterType="String" resultType="com.emsthymeleaf.entity.User">
        select * from `user` where username=#{username}
    </select>
    <insert id="save" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into `user`(username, realname, password, gender) values(#{username},#{realname},#{password},#{gender})
    </insert>
</mapper>